{
    "extends": "eslint-config-airbnb",
    "env": {
        "node": true
    },
    "rules": {
        "allowTemplateLiterals": 0,
        "arrow-body-style": 0,
        "arrow-parens": 0,
        "class-methods-use-this": 0,
        "comma-dangle": 0, // not sure why airbnb turned this on. gross!
        "consistent-return": 0,
        "eol-last": 0,
        "id-length": 0,
        "indent": [1, 4, {
            "SwitchCase": 1
        }],
        "func-names": 0,
        "global-require": 0,
        "keyword-spacing": [
            2, {
                "before": true,
                "after": true
            }
        ],
        "max-len": [1, 120],
        "new-cap": 0,
        "no-alert": 0,
        "no-bitwise": 0,
        "no-case-declarations": 0,
        "no-confusing-arrow": 0,
        "no-console": 0,
        "no-param-reassign": 0,
        "no-prototype-builtins": 0,
        "no-plusplus": 0,
        "no-restricted-syntax": 0,
        "no-return-assign": 0,
        "no-shadow": 0,
        "no-trailing-spaces": 0,
        "no-underscore-dangle": 0,
        "no-unneeded-ternary": 0,
        "no-unused-expressions": 0,
        "no-unused-vars": 0,
        "object-curly-spacing": 0,
        "object-shorthand": 0,
        "prefer-rest-params": 0,
        "prefer-template": 0,
        "quotes": [
            2,
            "single"
        ],
        "semi": [2, "always"],
        "strict": [2, "global"]
    }
}